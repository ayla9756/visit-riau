
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
 

 
model User {
  id         String    @id @default(uuid())
  email      String    @unique
  name       String?
  password   String
  role       Role      @default(USER)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

}
 

model Destination {
  id           String        @id @default(uuid())
  title        String
  slug         String        @unique
  description  String?
  address      String?
  price      Int?
  coordinate     Float?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
 
  photos       Photo[]
  reviews      Review[]
  bookings     Booking[]

  @@index([slug])
}

model Photo {
  id            String      @id @default(uuid())
  destinationId String?
  destination   Destination? @relation(fields: [destinationId], references: [id])
  url           String
  photoId           String?
  uploadedAt    DateTime    @default(now())
}

model Review {
  id            String      @id @default(uuid())
  email        String
  destinationId String
  destination   Destination @relation(fields: [destinationId], references: [id])
  rating        Int         @default(5)
  comment         String?
  approved      Boolean     @default(false)
  createdAt     DateTime    @default(now())

  @@index([destinationId])
}

model Booking {
  id            String      @id @default(uuid())
  email        String
  phone        String
  name        String
  destinationId String
  destination   Destination @relation(fields: [destinationId], references: [id])
  date     DateTime
  guests        Int         @default(1)
  totalPrice    Float?
  status        BookingStatus @default(PENDING)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([destinationId])
}

// Enums

enum Role {
  USER
  ADMIN
}

enum ContentStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}
 